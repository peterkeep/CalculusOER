<setup>
  <piecewiseFunction name="f">
    <function domain="(-infinity, 0)">
      sin(x)/x
    </function>
    <function domain="[0,0]">
      1
    </function>
    <function domain="(0,infinity)">
      sin(x)/x
    </function>
  </piecewiseFunction>
  <function name="g" styleNumber="3">
    (1-x/$z1)(1+x/$z1)(1-x/$z2)(1+x/$z2)(1-x/$z3)(1+x/$z3)(1-x/$z4)(1+x/$z4)(1-x/$z5)(1+x/$z5)(1-x/$z6)(1+x/$z6)
  </function>
  <function name="gDisplay">
    (1-x/$z1)(1+x/$z1)(1-x/$z2)(1+x/$z2)(1-x/$z3)(1+x/$z3)(1-x/$z4)(1+x/$z4)
  </function>
</setup>

